    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Buddy server",
        "runtimeExecutable": "nodemon",
        "cwd": "${workspaceFolder}/buddy-server",
        "program": "${workspaceFolder}/buddy-server/src/index.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug external Buddy server",
            "protocol": "inspector",
            "restart": true,
            "port": 9229
        }
    ]
}